---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + subpath?.[0];
---

<a
	href={href}
	class:list={[
		'inline-block underline decoration-transparent transition-all duration-200 hover:decoration-current hover:text-brand-text/80',
		className,
		{
			'font-semibold decoration-current text-brand-text': isActive,
		},
	]}
	{...props}
>
	<slot />
</a>
