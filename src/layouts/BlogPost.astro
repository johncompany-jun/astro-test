---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date | null;
	heroImage?: string | null;
	contentHtml?: string | null;
}

const { title, description, pubDate, updatedDate, heroImage, contentHtml } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="space-y-12">
			<article class="space-y-8">
				{heroImage && (
					<div class="px-5 md:px-0">
						<img
							src={heroImage}
							alt=""
							class="mx-auto w-full max-w-5xl rounded-2xl shadow-xl-soft"
							loading="lazy"
						/>
					</div>
				)}
				<div class="mx-auto max-w-3xl space-y-8 px-5">
					<header class="text-center">
						<div class="mb-3 text-sm uppercase tracking-[0.2em] text-brand-text/60">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="mt-1 text-xs italic tracking-wide text-brand-text/50">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="mb-4 font-display text-3xl tracking-[0.12em] text-brand-text md:text-4xl">
							{title}
						</h1>
						<hr class="mx-auto w-24 border-brand-text/20" />
					</header>
					<div class="space-y-6 text-base leading-8 tracking-wide text-brand-text/80 md:text-lg">
						{contentHtml ? <Fragment set:html={contentHtml} /> : <slot />}
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
