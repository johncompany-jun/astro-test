---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`${SITE_TITLE} | Blog`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="space-y-12">
			<section class="space-y-8">
				<header class="text-center">
					<p class="font-display text-sm uppercase tracking-[0.4em] text-brand-text/60">BLOG</p>
					<h1 class="font-display text-3xl font-semibold tracking-[0.12em] text-brand-text md:text-4xl">
						最新情報
					</h1>
				</header>
				<ul class="grid gap-6 md:grid-cols-2">
					{posts.map((post, index) => (
						<li
							class:list={[
								'group',
								{
									'md:col-span-2': index === 0,
								},
							]}
						>
							<a href={`/blog/${post.slug}/`} class="block space-y-4">
								<img
									src={post.data.heroImage}
									alt={post.data.title}
									class="w-full rounded-2xl shadow-lg-soft transition-shadow duration-300 group-hover:shadow-xl-soft"
									loading="lazy"
								/>
								<h4
									class:list={[
										'font-display tracking-[0.12em] text-brand-text transition-colors duration-300',
										index === 0 ? 'text-3xl md:text-[38px]' : 'text-xl md:text-2xl',
									]}
								>
									{post.data.title}
								</h4>
								<p class="text-sm uppercase tracking-wide text-brand-text/60 transition-colors duration-300 group-hover:text-brand-text">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
